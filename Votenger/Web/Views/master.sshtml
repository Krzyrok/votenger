<!DOCTYPE html>
<html lang="en" ng-app="votengerApp">
<head>
    <meta charset="utf-8" />
    <title>Votenger</title>

    <link rel="stylesheet" type="text/css" href="@Path['~/css/bootstrap.min.css']">
    <link rel="stylesheet" type="text/css" href="@Path['~/css/datatables.bootstrap.css']">
    <link rel="stylesheet" type="text/css" href="@Path['~/css/site.css']">
    @Section['SpecificStyles']
</head>
<body>
    <div class="container well col-md-8 col-md-offset-2">
		<div ng-controller="authorizationController as vm">
			<div ng-if="vm.user.isAuthorized" class="pull-right">
				<button type="button" class="btn btn-default btn-info" ng-click="vm.logout()"><span class="glyphicon glyphicon-off"></span> Logout {{ vm.user.nickname }}</button>
			</div>
		</div>
        @Section['Content'];
    </div>

    <script src="@Path['~/js/linq.js']" type="text/javascript"></script>
    <script src="@Path['~/js/jquery.js']" type="text/javascript"></script>
    <script src="@Path['~/js/bootstrap.min.js']" type="text/javascript"></script>
    <script src="@Path['~/js/angular.js']" type="text/javascript"></script>
    <script src="@Path['~/js/jquery.dataTables.min.js']" type="text/javascript"></script>
    <script src="@Path['~/js/angular-datatables.js']" type="text/javascript"></script>
    <script src="@Path['~/js/app.js']" type="text/javascript"></script>
	<script src="@Path['~/js/userService.js']" type="text/javascript"></script>
	<script src="@Path['~/js/authorizationController.js']" type="text/javascript"></script>
    @Section['SpecificScripts']
</body>
</html>
