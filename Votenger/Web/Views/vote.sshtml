@Master['master.sshtml']

@Section['Content']
<div ng-controller="voteController as vm">
    <div class="text-center">
        <h2>Vote</h2>
    </div>
    <h3>Games list</h3>
    <table datatable="ng" dt-options="vm.dtOptions" id="draft-table" class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Type</th>
                <th>Genre</th>
                <th>Max Players</th>
                <th>+ + +</th>
                <th>+ +</th>
                <th>+</th>
				<th>- - -</th>
				<th> | </th>
                <th>1UP</th>
				<th>1DOWN</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="game in vm.games" ng-class="{success: game.isValid && game.isSelected, danger: !game.isValid && game.isSelected}">
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.type }}</td>
                <td>{{ game.genre }}</td>
                <td>{{ game.maxPlayers }}</td>
                <td>
                    <input type="radio" name="threePluses" value="{{ game.id }}" ng-model="vm.threePluses" ng-change="vm.voteObjectSelected()">
                </td>
                <td>
                    <input type="radio" name="twoPluses" value="{{ game.id }}" ng-model="vm.twoPluses" ng-change="vm.voteObjectSelected()">
                </td>
                <td>
                    <input type="radio" name="onePlus" value="{{ game.id }}" ng-model="vm.onePlus" ng-change="vm.voteObjectSelected()">
                </td>
				<td>
                    <input type="radio" name="threeMinuses" value="{{ game.id }}" ng-model="vm.threeMinuses" ng-change="vm.voteObjectSelected()">
                </td>
				<td>
					|
				</td>
				<td>
                    <input type="radio" name="{{ game.id }}.basic" value="1" ng-model="game.basic" ng-change="vm.voteObjectSelected()" ng-disabled="game.isPremiumSelected">
                </td>
				<td>
                    <input type="radio" name="{{ game.id }}.basic" value="-1" ng-model="game.basic" ng-change="vm.voteObjectSelected()" ng-disabled="game.isPremiumSelected">
                </td>
            </tr>
        </tbody>
    </table>
	<div>
		<button type="button" class="btn btn-default btn-primary" ng-click="vm.goBack()"><span class="glyphicon glyphicon-arrow-left"></span> Go back</button>
		<button class="btn btn-default btn-success pull-right" ng-click="vm.saveVote()" ng-disabled="!vm.voteCompleted">Accept vote!</button>
	</div>
</div>
@EndSection

@Section['SpecificScripts']
<script src="@Path['~/js/gameService.js']" type="text/javascript"></script>
<script src="@Path['~/js/voteController.js']" type="text/javascript"></script>
<script src="@Path['~/js/voteService.js']" type="text/javascript"></script>
@EndSection

